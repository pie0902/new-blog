---
interface Props {
  title?: string
}

const { title } = Astro.props

// Split path and decode each segment for human-friendly display
const splitPath: string[] = Astro.url.pathname
  .split('/')
  .filter(Boolean)
  .map((part) => {
    try {
      return decodeURIComponent(part)
    } catch {
      return part
    }
  })

if (splitPath.length === 0) {
  splitPath.push('í™ˆ')
}

const finalTitle = title ? `// ${title}` : `/ ${splitPath.join(' / ')}`
---

<div
  class="border-0 border-accent/30 bg-accent/6 rounded-xl inline-block py-2.5 pl-3 pr-4 mt-5 md:mt-8"
>
  <h1 class="text-accent text-2xl font-semibold">
    {finalTitle}
  </h1>
</div>
